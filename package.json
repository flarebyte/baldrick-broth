{
  "name": "baldrick-broth",
  "description": "Build automation tool and task runner",
  "version": "0.16.0",
  "author": {
    "name": "Olivier Huin",
    "url": "https://github.com/olih"
  },
  "keywords": [
    "CLI",
    "Task runner",
    "Build system",
    "Build tool",
    "Make"
  ],
  "license": "MIT",
  "homepage": "https://github.com/flarebyte/baldrick-broth",
  "repository": {
    "type": "git",
    "url": "https://github.com/flarebyte/baldrick-broth.git"
  },
  "bugs": "https://github.com/flarebyte/baldrick-broth/issues",
  "bin": {
    "baldrick-broth": "dist/cli.mjs"
  },
  "type": "module",
  "exports": {
    ".": {
      "import": "./dist/cli.mjs",
      "default": "./dist/cli.mjs",
      "types": "./dist"
    },
    "./package.json": {
      "default": "./package.json"
    }
  },
  "main": "./dist/index.js",
  "files": [
    "dist",
    "src"
  ],
  "engines": {
    "node": ">=22"
  },
  "scripts": {
    "build": "tsc --outDir dist",
    "test": "tsx --test test/*.test.ts",
    "cli": "tsx src/cli.mts",
    "test:cov": "c8 --reporter=text-summary --reporter=lcov yarn -s test"
  },
  "dependencies": {
    "chalk": "^5.2.0",
    "commander": "^10.0.1",
    "dot-prop": "^7.2.0",
    "enquirer": "^2.3.6",
    "execa": "^7.1.1",
    "handlebars": "^4.7.7",
    "json-mask": "^2.0.0",
    "listr2": "^6.2.0",
    "papaparse": "^5.4.1",
    "winston": "^3.8.2",
    "yaml": "^2.2.1",
    "zod": "^3.21.4"
  },
  "devDependencies": {
    "@types/papaparse": "^5.3.7",
    "baldrick-dev-ts": "^1.0.0",
    "baldrick-zest-mess": "^0.17.0",
    "ts-node": "10.9.2",
    "c8": "^9.1.0",
    "tsx": "^4.19.0",
    "typescript": "^5.6.2"
  },
  "c8": {
    "all": true,
    "include": [
      "src/**/*.ts"
    ],
    "exclude": [
      "dist/**",
      "test/**",
      "pest-spec/**",
      "spec/**",
      "**/*.d.ts"
    ]
  },
  "peerDependencies": {}
}
